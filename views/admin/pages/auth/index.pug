extends ../../layout/auth.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)
    .container.my-5 
        .row.justify-content-center
            .col-8
                h1(class="text-center") Đăng Nhập
                form(
                    action=`${prefixAdmin}/auth/login`
                    method="POST"
                )
                    div(class="form-group mb-3")
                        label(for="email" class="mb-2") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        )

                    div(class="form-group mb-3")
                        label(for="password" class="mb-2") Mật Khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                        )
                    
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block w-100"
                        ) Đăng Nhập