extends ../../layout/default.pug
include ../../mixins/alert.pug

block header
    link(rel="stylesheet" href="../../../admin/css/product-create.css")

block main
    .main-content
        +alert-error(3000)
        // Card cho phần form
        .card.mb-5(style="--bs-card-spacer-y: 2rem; --bs-card-spacer-x: 2rem;")
            .card-header(style="display: flex; align-items: center; justify-content: center;")
                span.card-title Thêm Tài Khoản
            .card-body
                form(
                    class="form-create-product"
                    action=`${prefixAdmin}/accounts/create`
                    method="POST"
                    enctype="multipart/form-data"
                )
                    div(class="form-group")
                        label(for="fullName") Họ Tên
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            required
                        )

                    div(class="form-group")
                            label(for="email") Email
                            input(
                                type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                required
                            )

                    div(class="form-group")
                            label(for="password") Password
                            input(
                                type="password"
                                class="form-control"
                                id="password"
                                name="password"
                                required
                            )

                    div(class="form-group")
                            label(for="phone") Số điện thoại
                            input(
                                type="phone"
                                class="form-control"
                                id="phone"
                                name="phone"
                                required
                            )


                    div(
                        class="form-group" 
                        upload-image
                    )
                        label(for="avatar") Ảnh
                        input(
                            type="file"
                            class="form-control-file"
                            id="avatar"
                            name="avatar"
                            accept="image/*"
                            upload-image-input
                        )
                        div(style="position: relative; display: inline-block;")
                            button(
                                type="button"
                                class="btn btn-danger"
                                style="position: absolute; top: 0; left: 0; z-index: 1; display: none;"
                                id="removeButton"
                            )
                                i(class="fa fa-times") 
                            img(
                                src=""
                                upload-image-preview
                                id="imagePreview"
                                style="display: block;"
                            )

                    div(class="form-group")
                        label(for="role_id") Phân quyền 
                        select(name="role_id" id = "role_id" class="form-control")
                            option(disabled) -- Chọn --
                            option(value="") Quản trị viên
                            option(value="") Quản trị nội dung
                        

                    div(class="form-group form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="statusActive"
                            name="status"
                            value="active"
                            checked
                        )
                        label(for="statusActive" class="form-check-label") Hoạt động

                    div(class="form-group form-check form-check-inline")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="statusInActive"
                            name="status"
                            value="inactive"
                        )
                        label(for="statusInActive" class="form-check-label") Dừng Hoạt động

                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tạo mới

    // product