extends ../../layout/default.pug

block main
    .main-content
        include ../../partials/header.pug
        main 
            section
                h3(class = "section-head") Overview
                .analytics 
                    .analytic
                        .analytic-icon
                            span.las.la-eye
                        .analytic-info
                            h4 Total views 
                            h1 10.3M
                    .analytic
                        .analytic-icon
                            span.las.la-clock
                        .analytic-info
                            h4 Watch Time
                            h1 
                                | 20.9K 
                                small.text-success 5%
                    .analytic
                        .analytic-icon
                            span.las.la-users
                        .analytic-info
                            h4 Subscribers
                            h1 
                                | 1.3K 
                                small.text-success 12%
                    .analytic
                        .analytic-icon
                            span.las.la-heart
                        .analytic-info
                            h4 Total Likes
                            h1 
                                | 3.4M 
                                small.text-danger 12%
            section 
                .block-grid 
                    .revenue-card 
                        h3(class = "section-head") Total Revenue
                        .rev-content
                            img.avatar(src="/admin/images/user_admin.jpg", alt="Avatar")
                            .rev-info 
                                h3 Dinh Xuan 
                                h1 
                                    | 3.5M
                                    small  Subscribers
                            .rev-sum
                                h4 Total income 
                                h2 $70,860
                    .graph-card
                        h3(class = "section-head") Graph
                        .graph-content 
                            .graph-head
                                .icons-wrapper
                                    .icon
                                        span.las.la-eye.text-main
                                    .icon
                                        span.las.la-clock.text-success
                                .graph-select
                                    select(name="" id="")
                                        option(value="") September 
                            .graph-board
                                canvas(id="revenueChart" width="100%" height="46px")

    // dashboard
    script(src = '../admin/js/dashboard.js')
    // chart
    script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.js")