mixin table_item(products)
    table(class="table table-hover table-sm align-middle custom-table" checkbox-multi)
        thead.table-light.custom-thead
            tr
                th
                    input(type="checkbox" name="checkall")
                th STT
                th Hình Ảnh
                th Tiêu Đề
                th Giá
                th Sắp Xếp
                th Hành Động
        
        tbody
            each item, index in products
                tr
                    td
                        input(
                            type="checkbox"
                            name="id"
                            value=item.id
                        )
                    td #{index + 1}
                    td
                        img(
                            src=item.thumbnail, 
                            alt=`Sản phẩm ${index + 1}`, 
                            class="img-thumbnail"
                        )
                    td #{item.title}
                    td #{item.price}$
                    td 
                        input(
                            type="number"
                            value=item.position
                            min="1"
                            name="position"
                        )
                    td
                        .d-flex
                            form(
                                action=""
                                method="POST"
                                id="form-restore-item"
                                data-path=`${prefixAdmin}/products/restore`
                            )
                                button(
                                    type="submit"
                                    class="btn btn-primary btn-sm"
                                    button-restore
                                    data-id=item.id
                                ) Phục hồi

                            form(
                                action=""
                                method="POST"
                                id="form-delete-item"
                                data-path=`${prefixAdmin}/products/delete`
                            )
                                button(
                                    type="button"
                                    class="btn btn-danger btn-sm"
                                    button-delete
                                    data-id=item.id
                                ) Xóa

