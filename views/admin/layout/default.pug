doctype html 
html
  head
    title #{pageTitle}

    // Thêm thẻ meta để hỗ trợ responsive
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    //- Nhúng bootstrap
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    //- Nhúng file tĩnh
    block header
    link(rel="stylesheet", href=" ../../../admin/css/dashboard.css")
    link(rel="stylesheet", href=" ../../../admin/css/product.css")
    // Nhúng icon (icons8)
    link(rel="stylesheet", href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css")
    // Nhúng icon (Fontawesome cdn)
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")
    // Nhúng để làm giao diện confirm
    // sử dụng SweetAlert2 thay vì confirm 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  body

    include ../partials/sider.pug
    block main

    //- Nhúng bootstrap
    script(src = 'https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js')
    script(src = 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js')

    //- Nhúng Tinymce
    <script type="application/javascript" src= "/tinymce/tinymce.min.js"></script>
    <script type="application/javascript" src= "/admin/js/tinymce-config.js"></script>



