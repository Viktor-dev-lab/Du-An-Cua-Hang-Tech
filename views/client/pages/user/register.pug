extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-grid.pug
include ../../../admin/mixins/alert.pug


block main
    +alert-success(5000)
    +alert-error(5000)

    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center") Đăng ký tài khoản
                .card.p-4.my-4
                    form(
                        action="/user/register"
                        method="POST"
                    )
                        .mb-3
                            label(for="fullName" class="form-label") Họ tên
                            input(
                                type="text"
                                class="form-control"
                                id="fullName"
                                name="fullName"
                                required
                            )
                        .mb-3
                            label(for="email" class="form-label") Email
                            input(
                                type="text"
                                class="form-control"
                                id="email"
                                name="email"
                                required
                            )
                        .mb-3
                            label(for="password" class="form-label") Mật Khẩu
                            input(
                                type="text"
                                class="form-control"
                                id="password"
                                name="password"
                                required
                            )
                        .d-grid
                            button(
                                type="submit"
                                class="btn btn-success"
                            ) Đăng Ký