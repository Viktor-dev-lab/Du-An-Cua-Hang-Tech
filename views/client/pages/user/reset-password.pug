extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-grid.pug
include ../../../admin/mixins/alert.pug


block main
    +alert-success(5000)
    +alert-error(5000)

    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center") Đổi mật khẩu
                .card.p-4.my-4
                    form(
                        action="/user/password/reset"
                        method="POST"
                    )
                        .mb-3
                            label(for="newPassword" class="form-label") Mật khẩu mới
                            input(
                                type="text"
                                class="form-control"
                                id="newPassword"
                                name="newPassword"
                                required
                            )
                        .mb-3
                            label(for="confirmPassword" class="form-label") Xác Nhận Mật Khẩu
                            input(
                                type="text"
                                class="form-control"
                                id="confirmPassword"
                                name="confirmPassword"
                                required
                            )
                        .d-grid
                            button(
                                type="submit"
                                class="btn btn-success"
                            ) Đổi mật khẩu
                        
