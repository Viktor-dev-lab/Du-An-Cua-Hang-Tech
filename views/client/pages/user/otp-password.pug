extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-grid.pug
include ../../../admin/mixins/alert.pug


block main
    +alert-success(5000)
    +alert-error(5000)

    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center") Nhập mã OTP xác thực
                .card.p-4.my-4
                    form(
                        action="/user/password/otp"
                        method="POST"
                    )
                        .mb-3
                            label(for="email" class="form-label") Email
                            input(
                                type="text"
                                class="form-control"
                                id="email"
                                name="email"
                                required
                                value=email 
                                readonly
                            )
                        .mb-3
                            label(for="otp" class="form-label") Mã OTP
                            input(
                                type="text"
                                class="form-control"
                                id="otp"
                                name="otp"
                                required
                            )
                        .d-grid
                            button(
                                type="submit"
                                class="btn btn-success"
                            ) Xác nhận
                        